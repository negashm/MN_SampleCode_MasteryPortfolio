#include <iostream>

using namespace std;
double calculateCircumference(double radius);

const double pi = 3.14;
int main()
{
    cout<<"give me the radius";
    double r;
    cin >> r;
    cout<<calculateCircumference(r);

    return 0;
}

double calculateCircumference(double radius){
    double circumference = 2*pi*radius;
    return circumference;
}
